{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@sharedTypes/*": ["./src/shared-types/*"],
      "@dbActions/*": ["./src/dbActions/*"],
      "@utils/*": ["./src/utils/*"],
      "@socketEvents/*": ["./src/socketEvents/*"]
    },
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
